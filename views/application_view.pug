doctype html
html(lang="en")
head
  title 2020 Workshop Applications
  include ./head.pug

body

.container(style="text-align:center;")
    .row
        h1 2020 Workshop Applications

    each app in locals.apps
        .row
            .six.columns
                label Name
                p #{app.name}

            .six.columns
                label E-Mail
                p #{app.email}
        .row
            .six.columns
                label Address
                p #{app.address}

            .six.columns
                label Unit Number
                p #{app.unitNumber}
        .row
            .six.columns
                label City
                p #{app.city}

            .two.columns
                label State
                p #{app.state}
            .four.columns
                label Zip Code
                p #{app.zip}
        .row
            label Previous Experience
            != app.experience.replace(/\r\n/gi, "<br>")
            
        hr

    if locals.apps.length < 1
        .h3 No Applications on Server